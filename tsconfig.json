/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@rosoftlab/*": [
        "src/*/src/private_api",
        "src/*/src/public_api",
        "src/ui/*/src/public_api"
      ],
      "@rosoftlab/core": [
        "projects/rosoftlab/core/src/public-api.ts"
      ],
      "@rosoftlab/rdict": [
        "projects/rosoftlab/rdict/src/public-api.ts"
      ],
      "@rosoftlab/shared-ui": [
        "projects/rosoftlab/shared-ui/src/public-api.ts"
      ],
      "@rosoftlab/kendo": [
        "projects/rosoftlab/kendo/src/public-api.ts"
      ],
      "@rosoftlab/material": [
        "projects/rosoftlab/material/src/public-api.ts"
      ],
      "@rosoftlab/statemachine": [
        "projects/rosoftlab/statemachine/src/public-api.ts"
      ]
    },
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "useDefineForClassFields": false,
    "skipLibCheck": true,
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    // "strictInputAccessModifiers": true,
    // "strictTemplates": true,
    "noImplicitAny": false
  }
}